<h1>Discounts</h1>
<%= link_to "New Bulk Discount", "/merchant/discounts/new" %>

<% if @discounts.empty? %>
  <h2>No current bulk discounts</h2>
<% else %>
  <% @discounts.each do |discount| %>
    <section id="discount-<%= discount.id %>">
      <h2><%= link_to discount.name, "/merchant/discounts/#{discount.id}" %></h2>
      <p>Discount Percentage: <%= discount.percent %>%</p>
      <p>Discount Threshold: <%= discount.threshold %></p>
      <%= link_to "Edit Discount", "/merchant/discounts/#{discount.id}/edit" %>
      <%= button_to "Delete Discount", "/merchant/discounts/#{discount.id}", method: :delete %>
    </section>
  <% end %>
<% end %>
