<h2>Edit Discount</h2>
<%= form_tag "/merchant/discounts/#{@discount.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@discount.name}"%>

  <%= label_tag :percent %>
  <%= text_field_tag :percent, "#{@discount.percent}"%>

  <%= label_tag :threshold %>
  <%= text_field_tag :threshold, "#{@discount.threshold}" %>

  <%= submit_tag 'Update Discount' %>
<% end %>
